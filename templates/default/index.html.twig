{% extends 'base.html.twig' %}

{% block title %}MaButik
{% endblock %}

{% block body %}

	<hr style="width:100%; height:10px; background-color:#1B4F72 ">

	<div align="center">
		<h1>
			SHOP ONLINE
		</h1>

	</div>

	<hr style="width:100%; height:10px; background-color:#1B4F72 ">

	<div class="container">
		<div class="row">

			{%for article in articles  %}

				<div class="col-sm-4">


					<div class="card">

						<h6>
							{{article.titre}}
						</h6>
						<em class="text-muted text-primary text-ilatic">
							{#{article.categorie.titre}#}</em>
					
											{% for image in article.images %}
						<img src="{{ asset('/uploads/'~image.name) }}" alt="" width="350
						">
					{% endfor %}
						Publié le:
						{{article.createdAt | date('d/m/Y') }}

						<ul>
							<br>categoriee:																																																																																																																																																																																																																																																																																																																																																																																																											|
							{{article.categorie.titre}}
							
							</ul>
							<ul>
							Prix:																																																																																																																																																																																																																																																																																																																																																																																																											|
							{{article.prix}} €
						
							<a href="{{ path('article.affichage', {'id': article.id}) }}">
								<button type="button" class="btn btn-dark">lire
								</a>
							</ul>
						</div>
					</div>

					{% endfor%}


				</div>


			{% endblock %}
